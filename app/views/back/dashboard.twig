<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard | DevBlog</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body class="admin-body">
    <div class="admin-layout">
        <aside class="sidebar">
            <div class="sidebar-header">
                <i class="fas fa-code"></i>
                <span>DevBlog Admin</span>
            </div>
            <nav class="sidebar-nav">
                <a href="/admin" class="sidebar-link active">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/users" class="sidebar-link">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/articles" class="sidebar-link">
                    <i class="fas fa-newspaper"></i>
                    <span>Articles</span>
                </a>
                <a href="/logout" class="sidebar-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>
        </aside>


        <main class="admin-main">
            <header class="admin-header">
                <h1>Dashboard Overview</h1>
                <div class="admin-user">
                    <i class="fas fa-user-circle"></i>
                    <span>Admin</span>
                </div>
            </header>

            {% if errors %}
            <div class="validation-errors">
                {% for field, fieldErrors in errors %}
                    {% for error in fieldErrors %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i>
                            {{ error }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}

          


            <div class="dashboard-stats">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-details">
                        <h3>Total Users</h3>
                        <p class="stat-number">{{ stats.users }}</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-newspaper"></i>
                    </div>
                    <div class="stat-details">
                        <h3>Total Articles</h3>
                        <p class="stat-number">{{ stats.articles }}</p>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
