<!DOCTYPE html>
<html>
<head>
    <title>Users Management | DevBlog</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body class="admin-body">
    <div class="admin-layout">
        <aside class="sidebar">
            <div class="sidebar-header">
                <i class="fas fa-code"></i>
                <span>DevBlog Admin</span>
            </div>
            <nav class="sidebar-nav">
                <a href="/admin" class="sidebar-link">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/users" class="sidebar-link active">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="/admin/articles" class="sidebar-link">
                    <i class="fas fa-newspaper"></i>
                    <span>Articles</span>
                </a>
                <a href="/logout" class="sidebar-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>
        </aside>


        <main class="admin-main">
            <header class="admin-header">
                <h1>Users Management</h1>
                <button class="button button-primary">
                    <i class="fas fa-plus"></i> Add New User
                </button>
            </header>

            {% if errors %}
            <div class="validation-errors">
                {% for field, fieldErrors in errors %}
                    {% for error in fieldErrors %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i>
                            {{ error }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}

            

            <div class="table-container">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td><span class="badge badge-{{ user.role }}">{{ user.role }}</span></td>
                                <td>{{ user.created_at|date("Y-m-d") }}</td>
                                <td class="actions">
                                    <button class="action-btn edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="action-btn delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>
